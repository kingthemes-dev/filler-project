{
  "name": "headless-woo-monorepo",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "cd apps/web && npm run dev",
    "dev:web": "cd apps/web && npm run dev",
    "dev:mobile": "cd apps/mobile && npm run start",
    "build": "cd apps/web && npm run build",
    "build:web": "cd apps/web && npm run build",
    "build:mobile": "cd apps/mobile && npm run build",
    "start": "cd apps/web && npm run start",
    "start:web": "cd apps/web && npm run start",
    "start:mobile": "cd apps/mobile && npm run start",
    "lint": "cd apps/web && npm run lint",
    "lint:fix": "cd apps/web && npm run lint:fix",
    "type-check": "cd apps/web && npm run type-check",
    "test": "cd apps/web && npm run test",
    "test:watch": "cd apps/web && npm run test:watch",
    "test:coverage": "cd apps/web && npm run test:coverage",
    "analyze": "cd apps/web && npm run analyze",
    "lighthouse": "cd apps/web && npm run lighthouse",
    "format": "cd apps/web && npm run format",
    "format:check": "cd apps/web && npm run format:check",
    "dev:debug": "cd apps/web && npm run dev:debug",
    "install:all": "npm install && cd apps/web && npm install && cd ../mobile && npm install && cd ../../packages/shared && npm install"
  },
  "dependencies": {
    "@algolia/autocomplete-js": "^1.19.2",
    "@algolia/autocomplete-theme-classic": "^1.19.2",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-toast": "^1.2.15",
    "@types/nodemailer": "^7.0.1",
    "algoliasearch": "^5.36.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "framer-motion": "^12.23.12",
    "html2canvas": "^1.4.1",
    "jspdf": "^3.0.3",
    "lucide-react": "^0.546.0",
    "next": "15.5.6",
    "nodemailer": "^7.0.6",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "tailwind-merge": "^3.3.1",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@next/bundle-analyzer": "^15.5.2",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^20",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "cross-env": "^7.0.3",
    "eslint": "^9",
    "eslint-config-next": "15.5.6",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react-hooks": "^5.2.0",
    "jest": "^30.1.2",
    "lighthouse": "^12.8.2",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "tailwindcss": "^4",
    "tw-animate-css": "^1.3.7",
    "typescript": "^5",
    "webpack-bundle-analyzer": "^4.10.2"
  },
  "pnpm": {
    "overrides": {
      "eslint-plugin-react-hooks": "^5.2.0",
      "send@<0.19.0": ">=0.19.0",
      "semver@>=7.0.0 <7.5.2": ">=7.5.2",
      "cookie@<0.7.0": ">=0.7.0",
      "tar@=7.5.1": ">=7.5.2"
    }
  }
}
