# KING™ Headless Enterprise - Environment Variables
# Skopiuj do .env i wypełnij wartości

# ===========================================
# BREVO (SendinBlue) Newsletter Integration
# ===========================================
SENDINBLUE_API_KEY=your_brevo_api_key_here
SENDINBLUE_LIST_ID=your_list_id_here
BREVO_WEBHOOK_URL=https://builder.kingthemes.io/api/webhooks/brevo

# ===========================================
# Payment Gateway
# ===========================================
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# ===========================================
# Search & Analytics
# ===========================================
ALGOLIA_APP_ID=your_algolia_app_id
ALGOLIA_API_KEY=your_algolia_api_key
ALGOLIA_SEARCH_KEY=your_algolia_search_key

GA4_MEASUREMENT_ID=G-XXXXXXXXXX

# ===========================================
# Security & Validation
# ===========================================
RECAPTCHA_SITE_KEY=your_recaptcha_site_key
RECAPTCHA_SECRET_KEY=your_recaptcha_secret_key

# ===========================================
# Licensing & Authentication
# ===========================================
LICENSE_PUBLIC_KEY=your_license_public_key
LICENSE_PRIVATE_KEY=your_license_private_key
JWT_SECRET=your_jwt_secret_key_here

# ===========================================
# Database & Cache
# ===========================================
REDIS_URL=redis://localhost:6379
DATABASE_URL=postgresql://user:password@localhost:5432/kingheadless

# ===========================================
# AI Services
# ===========================================
OPENAI_API_KEY=sk-your_openai_api_key
FLUX_API_KEY=your_flux_api_key
DALLE_API_KEY=your_dalle_api_key
DEEPL_API_KEY=your_deepl_api_key

# ===========================================
# Monitoring & Logging
# ===========================================
SENTRY_DSN=https://your_sentry_dsn@sentry.io/project_id
SENTRY_AUTH_TOKEN=your_sentry_auth_token

# ===========================================
# Builder & Deployment
# ===========================================
BUILDER_SECRET=your_builder_secret_key
VERCEL_TOKEN=your_vercel_token
CLOUDFLARE_API_TOKEN=your_cloudflare_token

# ===========================================
# WordPress Integration
# ===========================================
WP_API_URL=https://your-wordpress-site.com/wp-json/wp/v2
WP_APPLICATION_PASSWORD=your_wp_application_password
WOOCOMMERCE_API_URL=https://your-site.com/wp-json/wc/v3
WOOCOMMERCE_CONSUMER_KEY=ck_your_consumer_key
WOOCOMMERCE_CONSUMER_SECRET=cs_your_consumer_secret

# ===========================================
# Development & Debugging
# ===========================================
NODE_ENV=development
DEBUG=king:*
LOG_LEVEL=info

# ===========================================
# Feature Flags
# ===========================================
ENABLE_AI_GENERATION=true
ENABLE_BREVO_WEBHOOKS=true
ENABLE_COUPON_GENERATION=true
ENABLE_GDPR_LOGGING=true
ENABLE_LIGHTHOUSE_CI=true

# ===========================================
# Rate Limiting & Security
# ===========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
CORS_ORIGIN=https://your-domain.com,https://preview.your-domain.com
