{
  "name": "@headless-woo/web",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "dev": "next dev --turbo",
    "build": "next build",
    "start": "next start",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "e2e": "playwright test",
    "e2e:init": "npx playwright install --with-deps",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "mobile:dev": "cd ../mobile && npm run dev",
    "mobile:build": "cd ../mobile && npm run build:android && npm run build:ios",
    "jobs:start": "node -r ts-node/register src/services/background-jobs.ts",
    "analyze": "ANALYZE=true npm run build",
    "analyze:server": "ANALYZE=true npm run build && next start",
    "lighthouse": "lighthouse http://localhost:3000 --output html --output-path ./lighthouse-report.html",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "dev:debug": "NODE_OPTIONS='--inspect' npm run dev",
    "performance:test": "node scripts/performance-test.js",
    "performance:monitor": "npm run dev & sleep 5 && npm run performance:test",
    "cls:test": "npm run performance:test | grep CLS",
    "lcp:test": "npm run performance:test | grep LCP",
    "perf:autocannon": "node scripts/perf-autocannon.mjs",
    "perf:autocannon:warm": "node scripts/perf-autocannon.mjs --warm",
    "perf:autocannon:cold": "node scripts/perf-autocannon.mjs --cold",
    "perf:k6": "k6 run scripts/perf-k6.js",
    "perf:wp-profile": "bash scripts/wp-profile.sh"
  },
  "dependencies": {
    "@headless-woo/shared": "workspace:*",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-toast": "^1.2.15",
    "@sentry/nextjs": "^10.20.0",
    "@sentry/node-core": "^10.22.0",
    "@tanstack/react-query": "^5.90.3",
    "@tanstack/react-query-devtools": "^5.90.2",
    "@types/ioredis": "^4.28.10",
    "@types/nodemailer": "^7.0.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "framer-motion": "^12.23.12",
    "import-in-the-middle": "^2.0.0",
    "ioredis": "^5.8.1",
    "jspdf": "^3.0.3",
    "lucide-react": "^0.542.0",
    "next": "15.5.6",
    "nodemailer": "^7.0.10",
    "ogl": "^1.0.11",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-window": "^1.8.11",
    "require-in-the-middle": "^8.0.1",
    "tailwind-merge": "^3.3.1",
    "use-debounce": "^10.0.6",
    "zod": "^3.25.76",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@next/bundle-analyzer": "^15.0.3",
    "@playwright/test": "^1.48.2",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^20",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@types/react-window": "^1.8.8",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.1",
    "eslint-config-next": "15.5.6",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react-hooks": "^5.0.0",
    "jest": "^30.1.2",
    "jest-environment-jsdom": "^30.2.0",
    "autocannon": "^7.12.0",
    "lighthouse": "^12.8.2",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "puppeteer": "^24.26.0",
    "tailwindcss": "^4",
    "tw-animate-css": "^1.3.7",
    "typescript": "^5",
    "webpack-bundle-analyzer": "^4.10.2"
  }
}
