root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[*.{yml,yaml}]
indent_size = 2

[*.{json,js,ts,tsx,jsx}]
indent_size = 2

[*.php]
indent_size = 4

[*.{py,rb,sh}]
indent_size = 4
